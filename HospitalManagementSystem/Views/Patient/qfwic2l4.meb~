@{
    Layout = "_PatientLayout";
    ViewData["Title"] = "Confirm Sign Out";
}

<div class="d-flex justify-content-center m-5">
    <div class="container1 confirm-box">
        <h2 class="text-white">Confirm Sign Out</h2>
        <p class="message">Are you sure you want to sign out? You will need to log in again to access your account.</p>

        <div class="text-center">
            <!-- Yes Button -->
            <form method="post" asp-action="SignOut">
                <button type="submit" class="btn btn-danger" onclick="showSignOutMessage(event)">Yes, Sign Out</button>
            </form>

            <!-- No Button -->
            <form method="get" asp-action="Index">
                <button type="submit" class="btn btn-secondary">No, Cancel</button>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function showSignOutMessage(event) {
        event.preventDefault();
        Swal.fire({
            title: 'Logging Out...',
            text: 'You are being signed out...',
            icon: 'success',
            iconColor: '#ff0000',
            timer: 2000,
            showConfirmButton: false
        }).then(() => {
            // Submit the form after a slight delay to show the message
            event.target.closest('form').submit();
        });
    }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

