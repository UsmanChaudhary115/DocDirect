@model Core.Entities.SignInViewModel

@{
    Layout = "_PatientLayout";
    ViewData["Title"] = "Sign In to DocDirect";
}

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center">
    <div class="row w-100 align-items-center">
        <!-- Left side: Welcome Message -->
        <div class="col-12 col-md-6 text-center text-md-start mb-4 mb-md-0 px-4">
            <div class="welcome-message-container text-dark">
                <h2 class="welcome-heading">Welcome Back to DocDirect!</h2>
                <p class="welcome-description">Please sign in to access your account and manage appointments.</p>
            </div>
        </div>

        <!-- Right side: Sign-In Form -->
        <div class="col-12 col-md-6 px-4">
            <div class="container1">
                <h2 style="color: white">Sign In to DocDirect</h2>

                @if (TempData["Message"] != null)
                {
                    <p class="message">@TempData["Message"]</p>
                }

                <form method="post" asp-action="Signin" asp-controller="Patient">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label text-white">Email address</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter email" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-white">Password</label>
                        <input asp-for="Password" class="form-control" placeholder="Enter password" />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark w-100" onclick="showSignInMessage(event)">Sign In</button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    Don't have an account?
                    <a asp-action="Signup" asp-controller="Patient" class="text-primary">Sign Up</a>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // If you want to implement a confirmation or notification message for the Sign-In button, you can use this script
    function showSignInMessage(event) {
        event.preventDefault();
        Swal.fire({
            title: 'Signing In...',
            text: 'You are being signed in...',
            icon: 'success',
            timer: 2000,
            showConfirmButton: false
        }).then(() => {
            // Submit the form after a slight delay to show the message
            event.target.closest('form').submit();
        });
    }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

